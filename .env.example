# =================================================
# Common (Spring)
# =================================================
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# JPA options
# - dev: update 권장, prod: validate 권장
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false

# Hibernate SQL logging (dev에서만 켜는 걸 추천)
HIBERNATE_SQL_LOG=OFF
HIBERNATE_TYPE_LOG=OFF

# Actuator health detail exposure
# - dev: always, prod: never 권장
HEALTH_SHOW_DETAILS=always


# =================================================
# MySQL (local docker for dev)
# =================================================
MYSQL_PORT=3306
MYSQL_DATABASE=app
MYSQL_USER=app
MYSQL_PASSWORD=apppw
MYSQL_ROOT_PASSWORD=rootpw

# App uses this for JDBC connection
# - dev(local): localhost
# - prod: RDS/운영DB 주소로 변경해서 사용
MYSQL_URL=jdbc:mysql://localhost:3306/app?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=Asia/Seoul&characterEncoding=UTF-8


# =================================================
# MongoDB (cloud)
# =================================================
MONGODB_URI=mongodb+srv://USER:PASSWORD@cluster.mongodb.net/dbname?retryWrites=true&w=majority
